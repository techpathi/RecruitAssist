<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        >



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_headquarters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Head Quarters"
                android:inputType="text"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About Us"
                android:inputType="textCapSentences|textMultiLine"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_yearfounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year Founded"
                android:inputType="number"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_companysize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Size"
                android:inputType="number"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_companywebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Website"
                android:inputType="textWebEditText"
                android:imeOptions="actionNext"
                />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/default_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Type"/>

            <RadioButton android:id="@+id/radio_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public Company"
                android:layout_marginTop="@dimen/default_margin"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Company"
                android:layout_marginTop="@dimen/default_margin"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_specialities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Specialities"
                android:inputType="textCapWords|textMultiLine"
                android:imeOptions="actionDone"
                />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/rl_logo_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/logodesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Logo"
                android:textSize="20sp"

                />

            <ImageButton
                android:id="@+id/photoPickerButton"
                android:layout_toRightOf="@id/logodesc"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="32dp"
                android:background="@android:drawable/ic_menu_gallery" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_gravity="center_horizontal"/>




    </LinearLayout>
</ScrollView>